<%- model_class = Chef -%>

<div class="container-fluid">
<header class="row-fluid hdr">
      <div class="span4 header-l">
         <a href="#"><img src="/images/logo.png"/></a>
        </div>
        
        
        
        <div class="span8 header-r">
          <div class="dropdown pull-left">
         <div class="strong-txt img-drp">All San Francisco</div>
        </div>
      
          <div class="pagntn img-arw pull-right">
           <div class="strong-txt"> page 1 <span class="gray">of 5</span></div>
       
        </div>
        </div>
      
    </header>

<div class="row-fluid index">
  <div class="span4 single-thumb visible-desktop visible-tablet">
    <div class="thumbnail">
      <%= image_tag("/images/chefs/"+@chef.username+"/profile.png") %>
    </div>
    <h1><%= @chef.name %></h1>
    <h3><%= @chef.location %></h3>
    <h3><%= @chef.specialty %></h3>

    <div class="rating"><img src="/images/Untitled-4_35.png"/><b class="rating-txt">82 reviews</b> </div>
    <p class="detail"><%= @chef.bio %></p>
    
  </div>
    
    
  <div class="span4 single-thumb-mob visible-phone">
    <div class="thumbnail">
      <%= image_tag("/images/chefs/"+@chef.username+"/profile.png") %>
    </div>
    <h1><%= @chef.name %></h1>
    <h3><%= @chef.location %></h3>
	<h3><%= @chef.specialty %></h>
    <div class="rating"><img src="/images/Untitled-4_35.png"/><b class="rating-txt">82 reviews</b> </div>
    <p class="detail"><%= @chef.bio %></p>
    
  </div>
    
    
  <div class="span8">
   <div class="row-fluid">
	<% if @chef.dishes.any? %>
	    <ul class="thumbnails">
	    	<%= render @chef.dishes %>
     	</ul>
   <% end %>
</div>

  <footer class="span12">
    
  </footer>

</div>

