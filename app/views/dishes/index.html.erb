<h1>Listing dishes</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Desription</th>
    <th>Price</th>
    <th>Ingredients</th>
    <th>Diet flags</th>
    <th>Cuisine</th>
    <th>Belongs to</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dishes.each do |dish| %>
  <tr>
    <td><%= dish.id %></td>
    <td><%= dish.name %></td>
    <td><%= dish.desription %></td>
    <td><%= dish.price %></td>
    <td><%= dish.ingredients %></td>
    <td><%= dish.diet_flags %></td>
    <td><%= dish.cuisine %></td>
    <td><%= dish.chef.name %></td>
    <td><%= link_to 'Show', dish %></td>
    <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
    <td><%= link_to 'Destroy', dish, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

