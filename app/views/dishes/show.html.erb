<%- model_class = Dish -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @dish.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desription) %>:</strong></dt>
  <dd><%= @dish.desription %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @dish.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ingredients) %>:</strong></dt>
  <dd><%= @dish.ingredients %></dd>
  <dt><strong><%= model_class.human_attribute_name(:diet_flags) %>:</strong></dt>
  <dd><%= @dish.diet_flags %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cuisine) %>:</strong></dt>
  <dd><%= @dish.cuisine %></dd>
  <dt><strong><%= model_class.human_attribute_name(:chef_id) %>:</strong></dt>
  <dd><%= @dish.chef_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              dishes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_dish_path(@dish), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              dish_path(@dish),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
