<h1>Listing availabilities</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Initial amount</th>
    <th>Remaining amount</th>
    <th>Starts on</th>
    <th>Expires on</th>
    <th>Belongs to</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @availabilities.each do |availability| %>
  <tr>
    <td><%= availability.id %></td>
    <td><%= availability.initial_amount %></td>
    <td><%= availability.remaining_amount %></td>
    <td><%= availability.starts_on %></td>
    <td><%= availability.expires_on %></td>
    <td><%= availability.dish.name %></td>
    <td><%= link_to 'Show', availability %></td>
    <td><%= link_to 'Edit', edit_availability_path(availability) %></td>
    <td><%= link_to 'Destroy', availability, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

