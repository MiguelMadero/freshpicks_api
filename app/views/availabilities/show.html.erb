<%- model_class = Availability -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:initial_amount) %>:</strong></dt>
  <dd><%= @availability.initial_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remaining_amount) %>:</strong></dt>
  <dd><%= @availability.remaining_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expires_on) %>:</strong></dt>
  <dd><%= @availability.expires_on %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dish_id) %>:</strong></dt>
  <dd><%= @availability.dish_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:starts_on) %>:</strong></dt>
  <dd><%= @availability.starts_on %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              availabilities_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_availability_path(@availability), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              availability_path(@availability),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
